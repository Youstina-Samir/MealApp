<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cheese_cake"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_background"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".controller.MealDetails"
            android:exported="false"
            android:label="@string/title_activity_meal_details"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".MealsDetails"
            android:exported="false"
            android:label="@string/title_activity_meals_detials"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".controller.navigationActivity"
            android:exported="false"
            android:label="@string/title_activity_navigation" />
        <activity
            android:name=".WeeklyPlannerActivity"
            android:exported="false" />
        <activity
            android:name=".controller.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainDish"
            android:exported="false" />
        <activity
            android:name=".controller.favActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>